<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.perfil.EditProfileFragment"
    android:padding="@dimen/sp30"
    android:id="@+id/container_edit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/configure_profile"
                android:textColor="@color/background"
                android:layout_gravity="center"
                android:textSize="@dimen/sp25" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change security pin"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="@dimen/sp23"/>

            <androidx.legacy.widget.Space
                android:layout_width="@dimen/sp2"
                android:layout_height="@dimen/sp20">
            </androidx.legacy.widget.Space>

            <!-- fragment_pin.xml -->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/txtCurrentPinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/current_pin"
                android:layoutDirection="rtl"
                android:paddingBottom="@dimen/sp10"
                android:textColorHint="@color/text_login"
                app:boxStrokeColor="@color/dark_greenish_blue"
                app:endIconMode="none"
                app:startIconDrawable="@drawable/ic_eye">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCurrentPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="center|left"
                    android:textColor="@color/dark_greenish_blue"
                    android:textColorHint="@color/text_login"
                    app:passwordToggleEnabled="true"/>

                <TextView
                    android:id="@+id/txtError"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:text=""
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/sp8"
                    android:textSize="@dimen/sp10" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/txtNewPinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_new_pin"
                android:layoutDirection="rtl"
                android:paddingBottom="@dimen/sp10"
                android:textColorHint="@color/text_login"
                app:boxStrokeColor="@color/dark_greenish_blue"
                app:endIconMode="none"
                app:startIconDrawable="@drawable/ic_eye">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:gravity="center|left"
                    android:textColor="@color/dark_greenish_blue"
                    android:textColorHint="@color/text_login" />

                <TextView
                    android:id="@+id/txtError2"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:text=""
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/sp8"
                    android:textSize="@dimen/sp10" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:id="@+id/txtRepeatPinLayout"
                android:layout_height="wrap_content"
                android:hint="@string/repeat_new_pin"
                android:layoutDirection="rtl"
                android:paddingBottom="@dimen/sp10"
                android:textColorHint="@color/text_login"
                app:boxStrokeColor="@color/dark_greenish_blue"
                app:endIconMode="none"
                app:startIconDrawable="@drawable/ic_eye">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/repeat_new_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:gravity="center|left"
                    android:textColor="@color/dark_greenish_blue"
                    android:textColorHint="@color/text_login" />

                <TextView
                    android:id="@+id/txtError3"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:text=""
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/sp8"
                    android:textSize="@dimen/sp10" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.legacy.widget.Space
                    android:layout_width="10sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <androidx.legacy.widget.Space
                    android:layout_width="@dimen/sp2"
                    android:layout_height="@dimen/sp40">
                </androidx.legacy.widget.Space>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15sp">

                <TextView
                    android:id="@+id/lblChangePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_pin"
                    android:textColor="@color/background"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp10"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:text="@string/back"
                    android:textColor="#01478D"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp10"
                    android:layout_weight="1"
                    android:background="@drawable/ic_btn_activo"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>