<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="25dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/color_estado"
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:background="#56D162" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10sp"
                    android:paddingTop="25sp">

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_humidity" />


                    <Space
                        android:layout_width="15sp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_device"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/text_percentage"
                                android:textColor="@color/background" />

                            <ImageView
                                android:id="@+id/img_exelent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:background="@drawable/ic_button_exelent" />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/txt_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_humidity_relative"
                            android:textColor="@color/background" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/semaforo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="25sp"
                            android:layout_height="40sp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:id="@+id/colorverde"
                                android:layout_width="25sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center"
                                android:background="#56D162"
                                android:gravity="center"
                                android:textColor="@color/background" />
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/txt_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GOOD \n 50-109"
                            android:textColor="@color/background" />


                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="25sp"
                            android:layout_height="40sp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:id="@+id/colornaranja"
                                android:layout_width="25sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center"
                                android:background="#FAB843"
                                android:gravity="center"
                                android:textColor="@color/background" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt_value2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moderate \n 40-110"
                            android:textColor="@color/background" />


                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="25sp"
                            android:layout_height="40sp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:id="@+id/colornaranja1"
                                android:layout_width="25sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center"
                                android:background="#FA8701"
                                android:gravity="center"
                                android:textColor="@color/background" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt_value3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bad \n 40-110"
                            android:textColor="@color/background" />


                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="25sp"
                            android:layout_height="40sp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:id="@+id/colornaranja4"
                                android:layout_width="25sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center"
                                android:background="#C61943"
                                android:gravity="center"
                                android:textColor="@color/background" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt_value4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Very Bad \n 40-110"
                            android:textColor="@color/background" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/img_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="30sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="30sp"
                android:background="@drawable/arrow_down" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>